@model EntitiyLayer.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Başlık ekleme</h2>
@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">

        @Html.Label("başlık adı:")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName)
        <br />
        @Html.Label("kategori:")
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vlc,
        new { @class = "form-control" })
        <br />
        @Html.Label("Yazar:")
        @Html.DropDownListFor(x => x.WriterId, (List<SelectListItem>)ViewBag.vlw,
        new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Başlığı oluştur</button>


    </div>


}
